<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_inherit_signature" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.signature</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="action_view_child_sales"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-usd"
                            invisible="signature_transaction_count == 0">
                        <div class="o_stat_info">
                            <span class="o_stat_value">
                                <field name="signature_transaction_count"/>
                            </span>
                            <span class="o_stat_text">Signatures</span>
                        </div>
                    </button>
                </div>

                <group position="before">
                    <group>
                        <field name="is_partner"/>
                    </group>
                </group>

                <notebook position="inside">
                    <page string="Partnership Details" name="partnership_details" invisible="not is_partner">
                        <group>
                            <group>
                                <field name="partnership_status"/>
                                <field name="partnership_type_ids" widget="many2many_tags"/>
                                <field name="partnership_pdf"/>
                            </group>
                            <group>
                                <field name="signature_transaction_count" readonly="1"/>
                                <field name="signature_transaction_count_this_year" readonly="1"/>
                                <field name="pending_transactions" readonly="1" string="Pending Transactions Order"/>
                                <field name="client_count" readonly="1"/>
                                <field name="current_transaction_price" readonly="1"/>
                                <field name="forecast_transaction_price" readonly="1"/>
                                <field name="paid_transactions_this_year" readonly="1"/>
                                <field name="overpaid" readonly="1"/>
                            </group>
                        </group>
                    </page>
                    
                    <page string="Subscription Details" name="subscription_details">
                        <group>
                            <group>
                                <field name="own_signature_transaction_count" readonly="1" string="Signature Transaction Count (All Time)"/>
                                <field name="own_signature_transaction_count_this_year" readonly="1" string="Signature Transaction Count This Year"/>
                                <field name="own_pending_transactions" readonly="1" string="Pending Transactions Order"/>
                                <field name="own_paid_transactions_this_year" readonly="1" string="Paid Transactions This Year"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>
