<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_signature_tier_tree" model="ir.ui.view">
        <field name="name">partner.signature.tier.tree</field>
        <field name="model">partner.signature.tier</field>
        <field name="arch" type="xml">
            <tree string="Signature Tiers" editable="bottom">
                <field name="name"/>
                <field name="min_quantity"/>
                <field name="transaction_price"/>
            </tree>
        </field>
    </record>

    <record id="view_partner_signature_tier_form" model="ir.ui.view">
        <field name="name">partner.signature.tier.form</field>
        <field name="model">partner.signature.tier</field>
        <field name="arch" type="xml">
            <form string="Signature Tier">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="transaction_price"/>
                        </group>
                        <group>
                            <field name="min_quantity"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <action id="action_partner_signature_tier" model="ir.actions.act_window">
        <field name="name">Partner Signature Tiers</field>
        <field name="res_model">partner.signature.tier</field>
        <field name="view_mode">tree,form</field>
    </action>

    <menuitem id="menu_partner_signature_tier"
              parent="sale.menu_sale_config"
              action="action_partner_signature_tier"
              sequence="100"/>
</odoo>
