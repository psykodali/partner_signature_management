<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_form_view_inherit_signature" model="ir.ui.view">
            <field name="name">product.template.form.inherit.signature</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_general']" position="inside">
                    <field name="is_signature_pack"/>
                    <field name="signature_count" invisible="not is_signature_pack"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
