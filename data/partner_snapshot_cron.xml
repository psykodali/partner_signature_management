<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Scheduled Action: Update Partner Signature Snapshots Daily -->
        <record id="ir_cron_update_partner_snapshots" model="ir.cron">
            <field name="name">Update Partner Signature Snapshots</field>
            <field name="model_id" ref="model_partner_signature_snapshot"/>
            <field name="state">code</field>
            <field name="code">model.create_snapshots()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>
